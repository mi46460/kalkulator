<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tampilan"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="800"
        android:gravity="bottom"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textAlignment="textEnd"
        tools:ignore="RtlCompat" />


    <Button
        android:id="@+id/button_c"
        android:layout_width="100dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tampilan"
        android:layout_margin="0dp"
        android:text="C"
        android:textSize="35dp"
        />

    <Button
        android:id="@+id/plus_minus"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="+/-"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/button_c"
        app:layout_constraintTop_toBottomOf="@id/tampilan"/>

    <Button
        android:id="@+id/delete"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="Delete"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@id/plus_minus"
        app:layout_constraintTop_toBottomOf="@id/tampilan"
        />

    <Button
        android:id="@+id/divide"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/red"
        android:text="/"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/multiple"
        app:layout_constraintStart_toEndOf="@id/delete"
        app:layout_constraintTop_toBottomOf="@id/tampilan" />

    <Button
        android:id="@+id/number_7"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="7"
        android:textSize="35dp"
        android:background="@drawable/border"
        android:layout_margin="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_c"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/number_8"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="8"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/plus_minus"
        app:layout_constraintStart_toEndOf="@id/number_7"/>

    <Button
        android:id="@+id/number_9"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="9"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/delete"
        app:layout_constraintStart_toEndOf="@id/number_8"/>

    <Button
        android:id="@+id/multiple"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/red"
        android:text="X"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/minus"
        app:layout_constraintStart_toEndOf="@id/number_9"
        app:layout_constraintTop_toBottomOf="@id/divide" />

    <Button
        android:id="@+id/number_4"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="4"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/number_7"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/number_5"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="5"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/number_8"
        app:layout_constraintStart_toEndOf="@id/number_4"/>

    <Button
        android:id="@+id/number_6"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="6"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/number_9"
        app:layout_constraintStart_toEndOf="@id/number_5"/>

    <Button
        android:id="@+id/minus"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="-"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/multiple"
        app:layout_constraintStart_toEndOf="@id/number_6"
        android:backgroundTint="@color/red"/>

    <Button
        android:id="@+id/number_1"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="1"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/number_4"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/number_2"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="2"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/number_5"
        app:layout_constraintStart_toEndOf="@id/number_1"/>

    <Button
        android:id="@+id/number_3"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="3"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/number_6"
        app:layout_constraintStart_toEndOf="@id/number_2"/>

    <Button
        android:id="@+id/plus"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="+"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/minus"
        app:layout_constraintStart_toEndOf="@id/number_3"
        android:backgroundTint="@color/red"/>

    <Button
        android:id="@+id/number_0"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:text="0"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/number_1"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/point"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="."
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/number_3"
        app:layout_constraintStart_toEndOf="@id/number_0"/>

    <Button
        android:id="@+id/equal"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="="
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/plus"
        app:layout_constraintStart_toEndOf="@id/point"
        android:backgroundTint="@color/red"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>